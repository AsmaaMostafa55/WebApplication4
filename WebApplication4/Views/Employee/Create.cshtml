@* @model IEnumerable<Department> *@
<form asp-action="Create" enctype="multipart/form-data">
    <div class="form-group">
        <label class="col-form-label" asp-for="name"></label>
        <input type="text" asp-for="name" class="form-control" />
        <span asp-validation-for="name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="age"></label>
        <input type="number" asp-for="age" class="form-control" />
        <span asp-validation-for="age" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="address"></label>
        <input type="text" asp-for="address" class="form-control" />
        <span asp-validation-for="address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="salary"></label>
        <input type="number" asp-for="salary" class="form-control" />
       
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="phonenumber"></label>
        <input type="text" asp-for="phonenumber" class="form-control" />
        <span asp-validation-for="phonenumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="hiringdate"></label>
        <input type="text" asp-for="hiringdate" class="form-control" />
        <span asp-validation-for="hiringdate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Department"></label>
        <select class="form-control" asp-items="@departmments" asp-for="DepartmentId">
            <option value="@null">--Select </option>
        </select>

    </div>
     <div class="form-group">
        <label class="col-form-label" asp-for="Image">Image</label>
        <input type="file" asp-for="Image" class="form-control-file" />
       
    </div> 

    <input type="submit" value="Create" class="btn btn-primary" />
<a asp-action="index" class="btn btn-light">Back to list</a>
</form>
