@model IEnumerable<EmployeeDto>
<h1>All Employees</h1>
</br>

<a asp-controller="Employee" asp-action="Create" class="btn btn-primary"> Create New Emplotee  </a>

<div class="row justify-content-center align-items-center">
<form class="row col-8 offset-2 " asp-action="Index ">
    <div class="col-8">
            <input type="text" class="form-control" name="searchImp" placeholder="SearchByName" />

    </div>
    <div class="col-4">
        <input type="submit" value="Search" class="btn btn-success" />

    </div>
</form>
</div>

<div class="mt-5 alert alert-danger">

    <h3>@ViewBag.Message</h3>

</div>
<div class="mt-5 alert alert-primary">

    <h3>@ViewData["TextMessage"]</h3>

</div>
<div class="mt-5 alert alert-dark">

    <h3>@TempData["TextMessage"]</h3>

</div>



@if(Model.Count()>0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D=>D.name)</th>
                <th>@Html.DisplayNameFor(D => D.Image)</th>

                <th>@Html.DisplayNameFor(D => D.age)</th>
                <th>@Html.DisplayNameFor(D => D.address)</th>
              
              <th>@Html.DisplayNameFor(D => D.salary)</th>
         
               @*  <th>@Html.DisplayNameFor(D => D.Email)</th> *@
                <th>@Html.DisplayNameFor(D => D.phonenumber)</th>
                <th>@Html.DisplayNameFor(D => D.hiringdate)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var Employee in Model)
            {
                <tr>
                    <td>@Employee.name</td>

                    <td>
                        
                        @Employee.name
                        
                    <img src="~/Files/Images/@Employee.ImageUrl" height="40" width="40" alt=""/>
                    </td>

                    <td>@Employee.age</td>
                    <td>@Employee.address</td>
                    <td>@Html.DisplayFor(M=>Employee.salary)</td>
                  @*   <td>@Html.DisplayFor(M => Employee.Email)</td> *@
                    <td>@Employee.phonenumber</td>
                    <td>@Employee.hiringdate</td>

                    <partial name="__ActionButtonPartialView" model="Employee.id" />

                </tr>
            }



        </tbody>
    </table>

}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>Ther is no EMployee</h3>

    </div>
}