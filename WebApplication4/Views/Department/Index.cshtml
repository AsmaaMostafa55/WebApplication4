

@model IEnumerable<DepartmentDto>
@{
    ViewData["Title"] = "Index";
}

<a asp-controller="Department" asp-action="Create" class="btn btn-primary">create new Department</a>

<div class="mt-5 alert alert-dark">

    <h3>@TempData["TextMessage"]</h3>

</div>

@if(Model.Count()>0){
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(D => D.code)</th>
            <th>@Html.DisplayNameFor(D => D.name)</th>
            <th>@Html.DisplayNameFor(D => D.createdat) </th>
            <th>Details</th>
            <th>update</th>
            <th>
                Deletd
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var department in Model)
        {
            <tr>
                <td>
                    @department.code
                </td>
                <td>
                    @department.name
                </td>
                <td>
                    @department.createdat
                </td>

                <td>
                    <a asp-action="Details" asp-route-id="@department.id" class="btn btn-warning">
                        <i class="fas fa-eye"></i>Details
                    </a>  
                </td>
                <td>
                    <a asp-action="Update" asp-route-id="@department.id" class="btn btn-success">
                        <i class="fas fa-edit"></i>Update
                    </a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@department.id" class="btn btn-success">
                        <i class="fas fa-trash"></i>Delete
                    </a>
                </td>
        @*         <partial model="department.Id" name="_ButtonsPartial">

                </partial> *@





            </tr>
        }
    </tbody>
</table>
}
else
{
    <div class="mt-5 alert-warning">
<h3>there is no Departments</h3>
    </div>
}

